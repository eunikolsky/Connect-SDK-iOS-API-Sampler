    # Keep It Functional - iOS UI acceptance testing in an XCUnit harness.
    pod 'KIF', '~> 3.2.3'
    # A light-weight TDD / BDD framework for Objective-C & Cocoa.
    pod 'Specta', '~> 1.0.1'
    # A matcher framework for Objective-C & Cocoa.
    pod 'Expecta', '~> 1.0.0'
end
